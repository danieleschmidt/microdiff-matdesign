{
  "python.defaultInterpreterPath": "./venv/bin/python",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests/",
    "-v",
    "--tb=short",
    "--strict-markers"
  ],
  "python.linting.enabled": true,
  "python.linting.banditEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.formatting.provider": "black",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.ruff": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.egg-info": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.coverage": true,
    "**/htmlcov": true,
    "**/dist": true,
    "**/build": true,
    "**/.tox": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/coverage": true,
    "**/htmlcov": true,
    "**/__pycache__": true,
    "**/*.egg-info": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true
  },
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindowMode": "perFile",
  "markdown.preview.breaks": true,
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "/.github/workflows/*.{yml,yaml}",
    "https://json.schemastore.org/github-action.json": "/action.{yml,yaml}",
    "https://json.schemastore.org/ansible-playbook.json": "/*playbook*.{yml,yaml}",
    "https://json.schemastore.org/prettierrc.json": "/.prettierrc.{yml,yaml}",
    "https://json.schemastore.org/stylelintrc.json": "/.stylelintrc.{yml,yaml}",
    "https://json.schemastore.org/circle-ci.json": "/.circleci/*.{yml,yaml}"
  },
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^)\\s*($TAGS)\\s*:?|^\\s*- \\[ \\])",
  "cSpell.words": [
    "microdiff",
    "matdesign",
    "microct",
    "lpbf",
    "pytest",
    "bandit",
    "mypy",
    "ruff",
    "isort",
    "toml",
    "yaml",
    "dockerfile",
    "vscode",
    "devcontainer",
    "terragon"
  ]
}